@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "UBBB Roles";
}

<section class="wraper mx-auto">
    <div class="flex flex-col my-6">
        <div class="overflow-x-auto">
            <div class="inline-block min-w-full align-middle md:px-6 lg:px-8">
                <div class="overflow-hidden border border-gray-200 dark:border-gray-700 rounded-lg">
                    <table class="min-w-full divide-y divide-gray-200 dark:divide-gray-700">
                        <thead class="bg-gray-50 dark:bg-[#2C2C2C]">
                            <tr>
                                <th scope="col" class="align-middle text-center py-3.5 px-4 text-sm font-normal text-gray-500 dark:text-gray-400">
                                    @Html.DisplayNameFor(model => model.Id)
                                </th>
                                <th scope="col" class="align-middle text-center py-3.5 px-4 text-sm font-normal text-gray-500 dark:text-gray-400">
                                    @Html.DisplayNameFor(model => model.Name)
                                </th>
                                <@*th scope="col" class="align-middle text-center py-3.5 px-4 text-sm font-normal text-gray-500 dark:text-gray-400">

                                </th*@>
                            </tr>
                        </thead>
                        <tbody class="bg-white divide-y divide-gray-200 dark:divide-gray-700 dark:bg-[#303030]">
                            @foreach (var item in Model) {
                                <tr>
                                    <td class="align-middle text-center px-4 py-4 text-sm font-medium whitespace-nowrap">
                                        <div>
                                            <h2 class="font-medium text-gray-800 dark:text-white">
                                                @Html.DisplayFor(modelItem => item.Id)
                                            </h2>
                                        </div>
                                    </td>
                                    <td class="align-middle text-center px-4 py-4 text-sm font-medium whitespace-nowrap">
                                        <div>
                                            <h2 class="font-medium text-gray-800 dark:text-white">
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </h2>
                                        </div>
                                    </td>
                                    @*<td class="align-middle text-center px-4 py-4 text-sm font-medium whitespace-nowrap">
                                        @Html.ActionLink("Edytuj", "Edit", new { id=item.Id }) |
                                        @Html.ActionLink("Szczegóły", "Details", new { id=item.Id }) |
                                        @Html.ActionLink("Usuń", "Delete", new { id=item.Id })
                                    </td>*@
                                </tr>
                            }
                            @if (Model.Count() == 0) {
                                <tr>
                                    <td colspan="8" class="align-middle text-center px-4 py-4 text-sm font-medium whitespace-nowrap">
                                        Brak danych
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <a class="text-center mt-[8px] block" asp-action="Create" asp-controller="Roles">Dodaj nową rolę</a>
            </div>
        </div>
    </div>
</section>